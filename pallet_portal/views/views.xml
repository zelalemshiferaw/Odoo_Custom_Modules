<odoo>
    <data>
        <!-- Define the list view for stock.quant.pallet -->
        <record id="stock_quant_pallet_list_view" model="ir.ui.view">
            <field name="name">Stock Quant Pallet List View</field>
            <field name="model">stock.quant.pallet</field>
            <field name="arch" type="xml">
                <tree string="Stock Quant Pallets">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="partner_id"/>
                    <field name="barcode"/>
                    <field name="content"/>
                    <field name="display_name"/>
                    <field name="stored_days"/>
                    <field name="move_line_id"/>
                    <field name="released_date" widget="datetime"/>
                </tree>
            </field>
        </record>

        <!-- Define the form view for stock.quant.pallet -->
        <record id="stock_quant_pallet_form_view" model="ir.ui.view">
            <field name="name">Stock Quant Pallet Form View</field>
            <field name="model">stock.quant.pallet</field>
            <field name="arch" type="xml">
                <form string="Stock Quant Pallet">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="location_id"/>
                            <field name="partner_id"/>
                            <field name="barcode"/>
                            <field name="image" widget="image" options="{'zoom': true}" modifiers='{"safe": true}'/>
                        </group>
                        <group>
                            <field name="content"/>
                            <field name="display_name"/>
                            <field name="stored_days"/>
                            <field name="picking_id"/>
                            <field name="move_line_id"/>
                            <field name="released_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pallet_action" model="ir.actions.act_window">
            <field name="name">Pallet</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.quant.pallet</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_pallet" parent="stock.menu_stock_root" action="pallet_action"
                   name="Pallets" sequence="100"/>

    </data>
</odoo>
